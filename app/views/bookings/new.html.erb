<div class="booking-container">


   <div class="new-booking">
          <div class="detail-box new-booking-content">
            <div>
              <h3>Restaurant</h3>
            </div>
            <div class="target-restaurant">
              <p><%= @restaurant.name %> </p>
              <p><%= @restaurant.address %></p>
            </div>

            <div class="container">
              <div class="form-wrapper" style=" padding-right: 18px; margin: 0 auto;">
                <h2>Select Date & Time</h2>

                <%= simple_form_for [@restaurant, @booking]  do |f| %>
                  <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
                  <%= f.button :submit, "Own my own", class: "btn btn-primary" %>
                <% end %>
              </div>
            </div>
          </div>
      </div>
</div>

