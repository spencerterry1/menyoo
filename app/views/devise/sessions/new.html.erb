<%  @page_title = "Log in" %>

<!-- Hide CheckedIn Button on Pages other than specific booking -->
<% content_for(:nav_checkedin_class, "nav_checkedin_invisible") %>
<!-- end -->

<div class="login-screen">


  <div class="text-center">
    <%= image_tag("menyoo-white.png", :class => "login-menyoo") %>
  </div>

  <div class="login-content">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button button-medium" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
