

<div class="container-dashboard">


<% @open_orders.each do |booking| %>

	<div class="container-grid checkedin">

		<h2>Checked-in </h2> 

			<% booking = Booking.where(id: booking, ordered:false, checkedin: true) %>
			<% booking = booking[0] %>

			<div class="container-grid-item"> 

			 	<div> <i class="order-button fas fa-plus-circle"></i></div>
				<div>  <%= booking.id %>  </div>	
				<div>  <%= booking.user.first_name%></div>
				<div>  <%= booking.attendees.count %></div>

			</div>

		<div>
			

		</div>

	</div>

	<div class="container-grid ordered">
		
		<h2> Ordered</h2> 

	</div>

	<div class="container-grid paid">

		<h2> Paid</h2> 

	</div>


	<% end %>


</div> 



