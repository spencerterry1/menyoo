<div class="tabbar-ios">
  <div class="tabbar-content">
    <!-- Home Tab -->
    <div class="navbar-back">
      <%= link_to root_path do %>
        <p>Home</p>
      <% end %>
    </div>

    <!-- Your Table Tab -->
    <div class="navbar-title">
      <% if user_signed_in? %>
        <% if current_user.bookings.count != 0 %>
          <% @booking = current_user.bookings.last %>
          <% @restaurant = current_user.bookings.last.restaurant %>
          <%=  link_to restaurant_booking_path(@restaurant, @booking) do %>
            <p>Your Table</p>
          <% end %>
        <% else %>
          <p class = "tab-unavailable">No Table</p>
        <% end %>
      <% else %>
        <p class = "tab-unavailable">No Table</p>
      <% end %>
    </div>

    <!-- User Profile Tab -->
    <% if user_signed_in? %>
      <%=  link_to user_path(current_user) do %>
        <div class="navbar-checkin">
          <p>User Profile</p>
        </div>
      <% end %>
    <% else %>
      <%=  link_to new_user_session_path do %>
        <div class="navbar-checkin">
          <p class="tab-unavailable">User Profile</p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
